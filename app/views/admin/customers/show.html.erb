<div class="container">
  <div class="row my-4">
    <h4 class="bg-light text-center col-4"><%= @customer.last_name %><%= @customer.first_name %> さんの会員詳細</h4>
  </div>
  
  <div class="d-flex justify-content-start">
    <p class="col-2">会員ID</p>
    <p class="col"><%= @customer.id %></p>
  </div>
  <div class="d-flex justify-content-start">
    <p class="col-2">氏名</p>
    <p class="col"><%= @customer.last_name %><%= @customer.first_name %></p>
  </div>
  <div class="d-flex justify-content-start">
    <p class="col-2">フリガナ</p>
    <p class="col"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></p>
  </div>
  <div class="d-flex justify-content-start">
    <p class="col-2">郵便番号</p>
    <p class="col"><%= @customer.postal_code %></p>
  </div>
  <div class="d-flex justify-content-start">
    <p class="col-2">住所</p>
    <p class="col"><%= @customer.address %></p>
  </div>
  <div class="d-flex justify-content-start">
    <p class="col-2">電話番号</p>
    <p class="col"><%= @customer.telephone_number %></p>
  </div>
  <div class="d-flex justify-content-start">
    <p class="col-2">メールアドレス</p>
    <p class="col"><%= @customer.email %></p>
  </div>
  <div class="d-flex justify-content-start">
    <p class="col-2">会員ステータス</p>
    <p class="col"><%= @customer.is_deleted ? '退会' : '有効' %></p>
  </div>
  <div class="d-flex justify-content-start">
    <p class="col-2"></p>
    <p class="col-2"><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %></p>
  </div>
</div>