<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path do |f| %>
  <p>商品画像</p>
  <p>商品名 <%= f.text_field :name %></p>
  <p>商品説明 <%= f.text_area :introduction %></p>
  <p>ジャンル <%= f.select :genre_id, [["ケーキ", 1], ["プリン", 2], ["焼き菓子", 3], ["キャンディ", 4]] %></p>
  <p>税抜価格 <%= f.text_field :price %>円</p>
  <p>販売ステータス
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '販売中', value: true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '販売停止中', value: false %>
  </p>
  <%= f.submit "変更を保存" %>
<% end %>