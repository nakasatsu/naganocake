<div class="container">
  <div class="d-flex justify-content-between my-4">
    <h4 class="bg-light text-center h-auto col-2">商品一覧</h4>
    <p><%= link_to "＋", new_admin_item_path, class: "btn rounded-circle shadow" %></p>
  </div>
  <table class="table">
    <thead class="bg-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>

      <% @items.each do |item| %>
      <tr>
        <td class="align-middle"><%= item.id %></td>
        <td class="align-middle">
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
        </td>
        <td class="align-middle"><%= item.price.to_s(:delimited) %></td>
        <td class="align-middle"><%= item.genre.name %></td>
        <td>
          <% if item.is_active %>
          <p class="text-success">販売中</p>
          <% else %>
          <p class="text-muted">販売停止中</p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center my-4">
    <%= paginate @items %>
  </div>
</div>