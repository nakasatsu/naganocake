<div class="container">
  <div class="row my-4 ml-5">
    <h4 class="bg-light text-center col-2">商品詳細</h4>
  </div>
  
  <div class="d-flex justify-content-start">
    <div class="col-4">
      <%= image_tag @item.get_image(300, 250) %>
    </div>
    <div class="col-7">
      <div class="d-flex justify-content-start">
        <p class="col-3">商品名</p>
        <p class="col-5"><%= @item.name %></p>
      </div>
      <div class="d-flex justify-content-start">
        <p class="col-3">商品説明</p>
        <p class="col-4"><%= @item.introduction %></p>
      </div>
      <div class="d-flex justify-content-start">
        <p class="col-3">ジャンル</p>
        <p class="col-4"><%= @item.genre.name %></p>
      </div>
      <div class="d-flex justify-content-start">
        <p class="col-3">税込価格<br>(税抜価格)</p>
        <p class="col-4"><%= (@item.price * 1.1).floor.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</p>
      </div>
      <div class="d-flex justify-content-start">
        <p class="col-3">販売ステータス</p>
        <p class="d-flex justify-content-start ml-3">
          <% if @item.is_active == true %>
            <p class="text-success font-weight-bold">販売中</p>
          <% else %>
            <p class="text-muted">販売停止中</p>
          <% end %>
        </p>
      </div>
      <div class="row col-4 ml-5 my-3 center-block">
        <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success btn-block" %>
      </div>
    </div>
  </div>
</div>
