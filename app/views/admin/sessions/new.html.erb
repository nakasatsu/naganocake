<div class="container">
  <div class="col-3 my-4">
    <h4 class="bg-light text-center">管理者ログイン</h4>
  </div>
  
  <div class="d-flex flex-column col-9 mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <p class="col-3"><%= f.label :"メールアドレス" %></p>
        <p class="col-9"><%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "40" %></p>
      </div>

      <div class="row">
        <p class="col-3"><%= f.label :"パスワード" %></p>
        <p class="col-9"><%= f.password_field :password, autocomplete: "current-password", :size => "40" %></p>
      </div>

      <div class="row my-4">
        <p class="col-3"></p>
        <p class="col-9"><%= f.submit "ログイン", class: "btn btn-primary" %></p>
      </div>
    <% end %>
  </div>
</div>