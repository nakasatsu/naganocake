<h1>配送先登録 / 一覧</h1>

<%= form_with model: @address do |f| %>
  <div class="field">
    <%= f.label :"郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :"宛名" %>
    <%= f.text_field :name %>
  </div>

  <%= f.submit "新規登録" %>

<% end %>


<% @addresses.each do |address| %>
  <table border="1">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id) %> <%= link_to "削除する", address_path(address.id), method: :delete %></td>
      </tr>
    </tbody>
  </table>

<% end %>