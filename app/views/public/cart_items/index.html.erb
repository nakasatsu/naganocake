<div class="container">
  <div class="row my-4">
    <div class="col-3">
      <h4 class="bg-light text-center">ショッピングカート</h4>
    </div>
    <div class="col-9 d-flex justify-content-end">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row my-4">
    <table class="table-bordered", style="width: 98%">
      <thead class="bg-light">
        <tr>
          <th style="width: 48%">商品名</th>
          <th style="width: 13%">単価(税込)</th>
          <th style="width: 13%">数量</th>
          <th style="width: 13%">小計</th>
          <th style="width: 13%"></th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_image(80, 50) %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td class="text-center">
            <%= form_with model: cart_item do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更", class: "btn btn-success btn-sm" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td class="text-center"><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger btn-sm" %></td>
          <% @total += cart_item.subtotal %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-3">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-9 d-flex justify-content-end">
      <table class="table-bordered mr-2", style="width: 35%">
        <tr>
          <th class="bg-light">合計金額</th>
          <td style="width: 50%"><%= @total.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-5">
    <% if @total > 0 %>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success btn-lg" %>
    <% else %>
      <%= link_to "情報入力に進む", cart_items_path, class: "btn btn-success btn-lg" %>
    <% end %>
  </div>
</div>
