<h2>商品一覧 <span>(全<%= @item.count %>件)</span></h2>

<% @items.each do |item| %>
<%= link_to item_path(item.id) do %>
<%= image_tag item.get_image(250, 200) %>

<p>
  <%= item.name %>
  <span>
    <% if !item.is_active %>
    販売停止中
    <% end %>
  </span>
</p>
<% end %>
<p>¥<%= item.with_tax_price.to_s(:delimited) %></p>
<% end %>

<%= paginate @items %>