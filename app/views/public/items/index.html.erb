<div class="container-fluid">
  <div class="row my-5 mx-auto px-5">
    <div class="col-2 border border-secondary"></div>
  
    <div class="col-9 offset-1">
      <div class="row my-4">
        <h2>商品一覧 <small class="text-muted">(全<%= @item.count %>件)</small></h2>
      </div>
      <div class="d-flex flex-colmun flex-wrap">
        <% @items.each do |item| %>
        <div class="card border-0 mr-2 my-3", style="width: 15rem;">
          <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_image(250, 130), class:"card-img-top　h-130" %>
          <div class="card-body">
            <h5 class="card-title">
              <%= item.name %>
              <% if !item.is_active %>
                販売停止中
              <% end %>
            </h5>
            <p class="card-text">¥<%= item.with_tax_price.to_s(:delimited) %></p>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center mt-5 mb-2">
        <p style="letter-spacing: .1em"><%= paginate @items %></p>
      </div>
    </div>
    
  </div>  
</div>

